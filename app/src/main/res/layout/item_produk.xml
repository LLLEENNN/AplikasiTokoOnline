<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="5dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/img_produk"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:scaleType="centerCrop"
            android:src="#9F9FF6" />

        <TextView
            android:id="@+id/tvDiskon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10%"
            android:padding="5dp"
            android:textSize="12sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/bg_percent" />

        <!--        <ImageView-->
        <!--            android:layout_width="24dp"-->
        <!--            android:layout_height="24dp"-->
        <!--            android:src="@drawable/ic_unfavorite"-->
        <!--            android:background="@drawable/bg_favorite"-->
        <!--            android:padding="4dp"-->
        <!--            android:layout_alignParentEnd="true"-->
        <!--            android:layout_marginTop="5dp"-->
        <!--            android:layout_marginRight="5dp"/>-->

        <TextView
            android:id="@+id/tv_nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_produk"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:maxLines="2"
            android:text="Nama Produk"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/tv_harga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/area"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:text="Rp.0"
            android:textColor="#FF0000"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_harga_promo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_harga"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="-10dp"
            android:layout_marginBottom="10dp"
            android:text="Rp.0"
            android:textColor="#010101"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_nama"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:background="@color/greenColor"
            android:text="Tersedia"
            android:textColor="#FFFFFF"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:textSize="10dp" />

        <ImageView
            android:id="@+id/tv_ship"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_below="@+id/tv_nama"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tv_status"
            android:src="@drawable/hrgspesial" />


        <TextView
            android:id="@+id/area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_ship"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="-5dp"
            android:text="*Syarat dan Ketentuan Berlaku"
            android:textStyle="normal"
            android:textSize="10sp" />

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/area"
            android:layout_marginTop="20dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_baseline_more_vert_24" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="5dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/img_produk"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:scaleType="fitCenter"
            android:src="#9F9FF6" />

        <!--        <ImageView-->
        <!--            android:layout_width="30dp"-->
        <!--            android:layout_height="30dp"-->
        <!--            android:src="@drawable/ic_unfavorite"-->
        <!--            android:background="@drawable/bg_favorite"-->
        <!--            android:padding="4dp"-->
        <!--            android:layout_alignParentEnd="true"-->
        <!--            android:layout_marginTop="8dp"-->
        <!--            android:layout_marginRight="8dp"/>-->

        <TextView
            android:id="@+id/tv_nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_produk"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:maxLines="2"
            android:text="Nama Produk"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_harga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/area"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:text="Rp.0"
            android:textColor="#000000"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_nama"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:background="@color/greenColor"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:text="Tersedia"
            android:textColor="#FFFFFF"
            android:textSize="10dp" />

        <ImageView
            android:id="@+id/tv_ship"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_below="@+id/tv_nama"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tv_status" />


        <TextView
            android:id="@+id/area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_ship"
            android:layout_marginLeft="10dp"
            android:text="*Syarat dan Ketentuan Berlaku"
            android:textSize="10sp"
            android:textStyle="normal" />


        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_below="@+id/area"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/ic_baseline_more_vert_24" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>
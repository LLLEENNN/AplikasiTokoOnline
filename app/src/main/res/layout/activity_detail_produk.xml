                        <!--                                    android:text="0.2kg"-->
                        <!--                                    android:textColor="#657191"-->
                        <!--                                    android:textSize="13dp" />-->

                        <!--                            </LinearLayout>-->

                        <!--                        </LinearLayout>-->

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <View
                                android:layout_width="1dp"
                                android:layout_height="55dp"
                                android:background="#ECECEC" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="5dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Stok"
                                    android:textColor="@color/colorPrimaryDark" />

                                <TextView
                                    android:id="@+id/stock"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textColor="#657191"
                                    android:textSize="13dp" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <View
                            android:id="@+id/div_title"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:background="@color/colorPrimaryDark" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="5dp"
                            android:text="Paket Hemat Pembelian"
                            android:textColor="#ffffff"
                            android:textStyle="bold" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/div_title"
                            android:background="@drawable/bg_sub"
                            android:padding="15dp">

                            <TextView
                                android:id="@+id/harga_satu"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rp. 8000" />

                            <TextView
                                android:id="@+id/batassatu"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/harga_satu"
                                android:text="/" />

                            <TextView
                                android:id="@+id/pcs"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/batassatu"
                                android:text="pcs" />

                            <TextView
                                android:id="@+id/toharga"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:text="Rp. 8000"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <!--                            Batas-->
                            <TextView
                                android:id="@+id/harga_dua"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/harga_satu"
                                android:layout_marginTop="3dp"
                                android:text="Rp. 23.400" />

                            <TextView
                                android:id="@+id/batasdua"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/harga_satu"
                                android:layout_marginTop="3dp"
                                android:layout_toRightOf="@+id/harga_dua"
                                android:text="/" />

                            <TextView
                                android:id="@+id/pcsdua"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/harga_satu"
                                android:layout_marginTop="3dp"
                                android:layout_toRightOf="@+id/batasdua"
                                android:text="3pcs" />

                            <TextView
                                android:id="@+id/tohargadua"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/harga_satu"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="3dp"
                                android:text="Rp. 8000"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <!--                            batas-->

                            <TextView
                                android:id="@+id/harga_tiga"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/harga_dua"
                                android:layout_marginTop="3dp"
                                android:text="Rp. 23.400" />

                            <TextView
                                android:id="@+id/batastiga"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/harga_dua"
                                android:layout_marginTop="3dp"
                                android:layout_toRightOf="@+id/harga_tiga"
                                android:text="/" />

                            <TextView
                                android:id="@+id/pcstiga"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/harga_dua"
                                android:layout_marginTop="3dp"
                                android:layout_toRightOf="@+id/batastiga"
                                android:text="3pcs" />

                            <TextView
                                android:id="@+id/tohargatiga"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/harga_dua"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="3dp"
                                android:text="Rp. 8000"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                        </RelativeLayout>


                    </RelativeLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dp"
                        android:text="Ayo beli lebih dari 1 untuk harga yang lebih murah!"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="13dp"
                        android:textStyle="bold" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ECECEC" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:text="Overview"
                    android:textColor="@color/dark"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_deskripsii"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:text="Produk Kondisi Baru"
                    android:textColor="@color/dark"
                    android:textSize="13dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="20dp"
                    android:background="#ECECEC" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#F8F8F8"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:text="Produk Terkait"
                        android:textColor="@color/dark"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_category"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/titlep"
                        android:layout_marginBottom="20dp"
                        android:visibility="gone"
                        tools:listitem="@layout/item_semua_produk" />

                    <com.facebook.shimmer.ShimmerFrameLayout
                        android:id="@+id/shimmer_produk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/titlep"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:shimmer_duration="800">

                        <include layout="@layout/shimmer_produk" />

                    </com.facebook.shimmer.ShimmerFrameLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:id="@+id/div_footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:paddingHorizontal="15dp"
            android:paddingVertical="10dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_btn_keranjang">

                <ImageView
                    android:id="@+id/btn_favorit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    app:srcCompat="@drawable/ic_baseline_favorite_border_24" />
                <ImageView
                    android:id="@+id/btn_unfavorit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_baseline_favorite_24" />

            </RelativeLayout>

            <!--            <RelativeLayout-->
